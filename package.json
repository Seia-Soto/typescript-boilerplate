{
  "name": "sample",
  "description": "A new awesome project! âœ¨",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn build",
    "prepack": "yarn prepare",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "changelog": "auto-changelog",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn changelog"
    }
  },
  "resolutions": {
    "typescript": "4.1.5"
  },
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "issuePattern": "[Ff]ixes #([A-Z]+-\\d+)",
    "breakingPattern": "breaking-change:",
    "hideCredit": true,
    "template": "CHANGELOG_TEMPLATE.hbs",
    "output": "CHANGELOG.md"
  },
  "contributingGuide": {
    "commitTags": {
      "feat": "Adds new feature",
      "fix": "Fixes a bug or closes an issue",
      "docs": "Update documentation",
      "chore": "Refactoring, adding test stuffs, and everything"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "auto-changelog": "^2.2.1",
    "babel-eslint": "^10.1.0",
    "eslint": "7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.1.3",
    "pinst": "^2.0.0",
    "typescript": "^4.2.2"
  }
}
